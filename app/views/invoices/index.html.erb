<div class='page-width'>
    <table>
        <thead>
            <tr>
                <td>Invoice ID</td>
                <td>Job Date</td>
                <td>Customer</td>
                <td>Total</td>
                <td>Description</td>
            </tr>
        </thead>
        <tbody>
    <% @invoices.each do |invoice| %>
            <tr>
                <td><%= invoice.id %></td>
                <td><%= invoice.job_date %></td>
                <td><%= invoice.customer_name %></td>
                <td><%= invoice.total %></td>
                <td><%= invoice.description %></td>
            </tr>    
    <% end %>
        </tbody>
    </table>
</div>