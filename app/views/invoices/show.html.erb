<div class="invoice-box">
        <table cellpadding="0" cellspacing="0">
          <tr class="top">
            <td colspan="4">
              <table>
                <tr>
                  <td class="title">
                    <%= image_tag wicked_pdf_asset_base64('mail_logo.png') %>
                    
                  </td>
                </tr>
                <tr class="information">
                  <td colspan="4">
                    <table>
                      <tr>
                        <td>
                          <strong>Bill To: <br>
                          <%= (@invoice.bill_to_info).split('-')[0] %></strong><br>
                          <%= (@invoice.bill_to_info).split('-')[1] %>
                          <%= (@invoice.bill_to_info).split('-')[2] %><br>
                        </td>

                        <td>
                          <strong><%= @invoice.project_name %></strong><br>
                          <%= @invoice.job_date %><br>
                        </td>
                      </tr>
                    </table>
                  </td>
                </tr>
                <tr>
                  <td>
                    <h1 class='form-titles' style='margin-top: 0px;'>Invoice #:<%= @invoice.id %></h1>
                  </td>
                </tr>
              </table>
            </td>
          </tr>

          

          <tr class="heading">
            <td>Item</td>
            <td class="right"></td>
            <td class="right"></td>
            <td>Total</td>
          </tr>

        <% @invoice.details.each do |detail| %>
        <tr class="item">
                <td>
                <%= detail.description %>
                </td>

            <td class="right">
            </td>

            <td class="right">
            </td>

            <td>
                <%= number_to_currency(detail.amount) %>
            </td>
        </tr>
        <% end %>


          <tr>
            <td colspan="4"></td>
          </tr>

          <tr>
            <td colspan="2"></td>
            <td><strong>Subtotal</strong></td>
            <td><%= number_to_currency(@invoice.subtotal) %></td>
          </tr>

          <tr>
            <td colspan="2"></td>
            <td><strong>Tax</strong></td>
            <td><%= (@invoice.tax * 100).round(3) %>%</td>
          </tr>

          <tr>
            <td colspan="2"></td>
            <td><strong>Total</strong></td>
            <td><%= number_to_currency(@invoice.total) %></td>
          </tr>

          <tr>
            <td colspan="2"></td>
            <td><strong>Payments / Credits</strong></td>
            <td><%= number_to_currency(@invoice.payments_credits) %></td>
          </tr>

          <tr class="heading">
            <td colspan="2"></td>
            <td><strong>BALANCE REMANINING:</strong></td>
            <td>
               <strong><%= number_to_currency(@invoice.balance_remaining) %></strong>
            </td>
          </tr>
        </table>
    </div>