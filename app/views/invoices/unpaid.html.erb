<div class="main-content">
<%= link_to 'All Invoices', invoices_path %> | <%= link_to 'Paid Invoices', paid_invoices_path %><br>
    <div class='form-row'>
    <%= form_tag unpaid_invoices_path, style: 'display: flex', method: :get do %>
        <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Enter search query"
        %>
        <%= submit_tag "Search", class: "btn btn-primary"%>
    <% end %>
    </div><br>
    <table class='work-orders' style='overflow: scroll;'>
        <thead>
            <tr>
                <td>Invoice ID</td>
                <td>Job Date</td>
                <td>Customer</td>
                <td>Total</td>
                <td>Project Name</td>
                <td colspan='3'>More Details</td>
            </tr>
        </thead>
        <tbody>
    <% @invoices.each do |invoice| %>
        <% if !(invoice.paid) %>
            <tr>
                <td><%= invoice.id %></td>
                <td><%= invoice.job_date %></td>
                <td><%= invoice.name%></td>
                <td>$<%= invoice.balance_remaining %></td>
                <td><%= invoice.project_name %></td>
                <td><%= link_to 'Edit Invoice', edit_invoice_path(invoice) %></td>
                <td><%= link_to 'Webpage', invoice_path(invoice) %></td>
                <td><%= link_to 'PDF', invoice_path(invoice, format: :pdf) %></td>
            </tr>   
        <% end %> 
    <% end %>
        </tbody>
    </table>
</div>