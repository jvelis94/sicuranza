<div class='main-content'>
    <h1 class='form-titles'>New Customer</h1>

    <%= simple_form_for(@contractor, html: { multipart: true}) do |f| %>

    <div id='customer-info'>
        <%= f.input :name, label: 'Name:' %>
        <%= f.input :address1, label: 'Street Address:' %>
        <section id='city-state-zip-grid'>
        <%= f.input :city, label: 'City:' %>
        <%= f.input :state, label: 'State:' %>
        <%= f.input :zip, label: 'Zip:' %>
        </section>
        <section id='phone-email-grid'>
        <%= f.input :phone, type: 'number', label: 'Phone:' %> <br>
        <div>
            <%= f.label :files, 'Upload private files' %><br>
            <%= f.file_field :files, multiple: true, direct_upload: true%>
        </div>
        <div>
            <%= f.label :blueprints, 'Upload general files' %><br>
            <%= f.file_field :blueprints, multiple: true, direct_upload: true%>
        </div>
        </section>
        <br>
        <h6>Notes</h6>
        <%= f.text_area :notes, label: 'Notes:', id:'work-details' %>
        <br><br>

        <%= f.button :submit, 'Create Customer', class: 'btn btn-primary' %>
    <% end %>
</div>